<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/logo_background_color"

    android:id="@+id/entity_flayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/entity_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/logo_background_color"

        app:cardElevation="@dimen/padding_normal"
        app:cardCornerRadius="10dp">
        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@color/logo_background_color"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/sourceicon"
                android:layout_width="180dp"
                android:layout_height="135dp"

                android:background="@color/logo_background_color"

                app:srcCompat="@drawable/ic_tmp_icon" />

            <View
                android:id="@+id/dividerview0"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="47dp"

                android:background="@android:color/white"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/sourceicon"
                app:layout_constraintRight_toRightOf="@+id/sourceicon"
                app:layout_constraintTop_toTopOf="@+id/sourceicon" />

            <View
                android:id="@+id/dividerview1"
                android:layout_width="100dp"
                android:layout_height="1dp"

                android:layout_marginTop="92dp"

                android:background="@android:color/white"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/sourceicon"
                app:layout_constraintRight_toRightOf="@+id/sourceicon"
                app:layout_constraintTop_toTopOf="@+id/sourceicon" />



            <TextView
                android:id="@+id/sourcetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginStart="8dp"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/sourceicon"
                app:layout_constraintRight_toRightOf="@+id/sourceicon"
                app:layout_constraintTop_toTopOf="@+id/sourceicon"

                android:text="@string/nav_item_simple_gong_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
